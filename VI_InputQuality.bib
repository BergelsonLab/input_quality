@article{hawkins2021,
  title = {The {{Division}} of {{Labor}} in {{Communication}}: {{Speakers Help Listeners Account}} for {{Asymmetries}} in {{Visual Perspective}}},
  shorttitle = {The {{Division}} of {{Labor}} in {{Communication}}},
